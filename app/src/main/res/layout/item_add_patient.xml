<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />


    </data>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ll_add_patient"
        android:layout_margin="@dimen/_2sdp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_remove"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_gravity="end"
            android:src="@drawable/remove" />


            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_50sdp"
                android:layout_margin="@dimen/_5sdp"
                android:id="@+id/card_image"
                android:layout_centerInParent="true"
                android:layout_height="@dimen/_50sdp"
                app:cardCornerRadius="@dimen/_7sdp"
                >
                <LinearLayout
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/image_border_bg"
                    >
                    <ImageView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:src="@drawable/no_image"

                        android:id="@+id/img_patient_familymember_photo"
                        android:padding="@dimen/_5sdp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>






        <com.customview.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/_10ssp"
            android:id="@+id/txt_patient_familymember_name"
            android:text="Test User"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/img_edit"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_alignParentStart="true"
                android:src="@drawable/edit_bg" />

        </RelativeLayout>
    </LinearLayout>
</layout>