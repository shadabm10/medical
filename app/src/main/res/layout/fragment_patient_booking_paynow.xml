<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/common_bg"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:id="@+id/crdview_order_medicine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_12sdp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:orientation="vertical">

                        <com.customview.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Please enter your card details"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:textStyle="bold"
                            android:padding="@dimen/_10sdp"
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/_14sdp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:layout_marginEnd="@dimen/_20sdp"
                                android:hint="Card Number"
                                android:textColor="@color/txt_color"
                                android:textColorHint="@color/txt_color"
                                android:textSize="@dimen/_8ssp"
                                android:padding="@dimen/_5sdp"
                                android:background="@drawable/commonbg_edit"/>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:layout_marginEnd="@dimen/_20sdp"
                                android:hint="Expiry Date"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textColor="@color/txt_color"
                                android:textColorHint="@color/txt_color"
                                android:textSize="@dimen/_8ssp"
                                android:padding="@dimen/_5sdp"
                                android:background="@drawable/commonbg_edit"/>


                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:layout_marginEnd="@dimen/_20sdp"
                                android:hint="CVV"
                                android:inputType="number"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textColor="@color/txt_color"
                                android:textColorHint="@color/txt_color"
                                android:textSize="@dimen/_8ssp"
                                android:padding="@dimen/_5sdp"
                                android:background="@drawable/commonbg_edit"/>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_50sdp"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:layout_marginEnd="@dimen/_20sdp"
                                android:hint="Billing Address Edit"
                                android:gravity="top"
                                android:inputType="text"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textColor="@color/txt_color"
                                android:textColorHint="@color/txt_color"
                                android:textSize="@dimen/_8ssp"
                                android:padding="@dimen/_5sdp"
                                android:background="@drawable/commonbg_edit"/>

                        </LinearLayout>
                        <com.customview.MyCustomButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/btn_booking_pay_now"
                            android:text="Pay SR400"
                            android:textSize="@dimen/_14sdp"
                            android:layout_marginRight="@dimen/_60sdp"
                            android:layout_marginLeft="@dimen/_60sdp"
                            android:textColor="@color/text_hint_color"
                            android:paddingBottom="@dimen/_5sdp"
                            android:padding="@dimen/_10sdp"
                            android:background="@drawable/square_bg"
                            android:layout_marginTop="@dimen/_20sdp"/>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>