<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>


    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_bg"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_add_allergies"
                android:background="@color/common_bg"
                android:orientation="vertical">
                <com.customview.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Smoking Habits"
                    android:textSize="@dimen/_12ssp"

                    />
                <com.customview.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edt_lifestyle_smokinghabits"
                    android:padding="@dimen/_7sdp"
                    android:maxLines="1"
                    android:inputType="text"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:textSize="@dimen/_12ssp"
                    android:drawableEnd="@drawable/down_arrow"
                    android:textColorHint="@color/modified_black_1"
                    android:background="@drawable/white_rectangle"/>

            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/common_bg"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">
                    <com.customview.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Alcohol Habits"
                        android:textSize="@dimen/_12ssp"

                        />
                    <com.customview.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edt_lifestyle_alcohol_habits"
                        android:padding="@dimen/_7sdp"
                        android:maxLines="1"
                        android:inputType="text"
                        android:drawableEnd="@drawable/down_arrow"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textSize="@dimen/_12ssp"
                        android:textColorHint="@color/modified_black_1"
                        android:background="@drawable/white_rectangle"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/common_bg"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">
                    <com.customview.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Blood Group"
                        android:textSize="@dimen/_12ssp"

                        />
                    <com.customview.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edt_lifestyle_blood_group"
                        android:padding="@dimen/_7sdp"
                        android:maxLines="1"
                        android:inputType="text"
                        android:drawableEnd="@drawable/down_arrow"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textSize="@dimen/_12ssp"
                        android:textColorHint="@color/modified_black_1"
                        android:background="@drawable/white_rectangle"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/common_bg"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">
                    <com.customview.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Activity Level"
                        android:textSize="@dimen/_12ssp"

                        />
                    <com.customview.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edt_lifestyle_activity_level"
                        android:padding="@dimen/_7sdp"
                        android:maxLines="1"
                        android:drawableEnd="@drawable/down_arrow"
                        android:inputType="text"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textSize="@dimen/_12ssp"
                        android:textColorHint="@color/modified_black_1"
                        android:background="@drawable/white_rectangle"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/common_bg"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">
                    <com.customview.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Food Preference"
                        android:textSize="@dimen/_12ssp"

                        />
                    <com.customview.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edt_lifestyle_food_preference"
                        android:padding="@dimen/_7sdp"
                        android:maxLines="1"
                        android:inputType="text"
                        android:drawableEnd="@drawable/down_arrow"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textSize="@dimen/_12ssp"
                        android:textColorHint="@color/modified_black_1"
                        android:background="@drawable/white_rectangle"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/common_bg"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">
                    <com.customview.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Occupation"
                        android:textSize="@dimen/_12ssp"

                        />
                    <com.customview.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edt_lifestyle_occupation"
                        android:padding="@dimen/_7sdp"
                        android:maxLines="1"
                        android:inputType="text"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textSize="@dimen/_12ssp"
                        android:drawableEnd="@drawable/down_arrow"
                        android:textColorHint="@color/modified_black_1"
                        android:background="@drawable/white_rectangle"/>

                </LinearLayout>
                <com.customview.MyCustomButton
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:id="@+id/btn_patient_profile_lifestyle"
                    android:layout_marginEnd="@dimen/_50sdp"
                    android:layout_marginStart="@dimen/_50sdp"
                    android:layout_gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:layout_marginBottom="@dimen/_30sdp"
                    android:drawablePadding="@dimen/_10sdp"
                    android:drawableEnd="@drawable/white_arrow_circle"
                    android:textSize="@dimen/_12ssp"
                    android:background="@drawable/booking_new_bg"
                    android:text="Save"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>